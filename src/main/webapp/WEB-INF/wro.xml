<groups xmlns="http://www.isdc.ro/wro">
  <group name="all">
    <group-ref>angular</group-ref>
    <group-ref>jquery</group-ref>
    <group-ref>bootstrap</group-ref>
    <group-ref>angularui</group-ref>
  </group>


  <group name="angular">
    <js>classpath:META-INF/resources/webjars/angularjs/1.2.13/angular.js</js>
    <js>classpath:META-INF/resources/webjars/angularjs/1.2.13/angular-route.js</js>
    <js>classpath:META-INF/resources/webjars/angularjs/1.2.13/angular-resource.js</js>
    <js>classpath:META-INF/resources/webjars/angularjs/1.2.13/angular-cookies.js</js>
    <js>classpath:META-INF/resources/webjars/angularjs/1.2.13/angular-sanitize.js</js>
  </group>
  
  <group name="angularui">
    <js>classpath:META-INF/resources/webjars/angular-ui-bootstrap/0.10.0/ui-bootstrap.js</js>
    <js>classpath:META-INF/resources/webjars/angular-ui-bootstrap/0.10.0/ui-bootstrap-tpls.js</js>
  </group>
  
  <group name="jquery">
    <js>classpath:META-INF/resources/webjars/jquery/1.8.2/*.min.js</js>
  </group>
  
  <group name="bootstrap">
    <js>classpath:META-INF/resources/webjars/bootstrap/3.0.3/js/*.min.js</js>
    <css>classpath:META-INF/resources/webjars/bootstrap/3.0.3/css/*.min.css</css>
  </group>

  <group name="g2">
    <js>/dwr/engine.js</js>
    <group-ref>g3</group-ref>
    <css>classpath:/static/css/2.css</css>
    <js>classpath:/static/*.js</js>
  </group>

  <group name="g3">
    <css>/static/css/style.css</css>
    <css>/static/css/global/*.css</css>
    <js>/static/js/**</js>
    <js>http://www.site.com/static/plugin.js</js>
  </group>

</groups>