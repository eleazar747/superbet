[[<index]]
[[$content]]
	<legend>Search Sure Bets</legend>
	<div class="input-append">
		<button id="search-button" class="btn" type="button">Search</button>
	</div>
	<script type="text/javascript">
		$(document).ready(function() {
			$('#search-button').bind('click', function(){
				findAll('#bets-values','bets/sures','#table-content');
		    });
		});
	</script>
	<script id="bets-values" type="text/x-mustache-template">
		{{#response}}
			<tr>
			<td>{{date}}</td>
			<td>{{sport}}</td>
			<td>{{betType}}</td>
			<td>{{match}}</td>
			<td>{{alternatives}}</td>
			<td>{{odds}}</td>
			<td>{{profit}}</td>
			</tr>
		{{/response}}
	</script> 
	<table class="table table-condensed table-hover table-striped">
		<thead>
			<tr>
				<th>Date</th>
				<th>Sport</th>
				<th>Bet Type</th>
				<th>Match</th>
				<th>Alternatives</th>
				<th>Odds</th>
				<th>Profit</th>
			</tr>
		</thead>
		<tbody id="table-content">
		</tbody>
	</table>       
[[/content]]
[[/index]]