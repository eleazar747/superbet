        <jsoup.version>1.7.2</jsoup.version>
        <commons-lang.version>3.1</commons-lang.version>
        <spring-metrics.version>3.0.0</spring-metrics.version>
        <mustache.version>0.8.12</mustache.version>
        <flexy-pool.version>1.0.4</flexy-pool.version>
        <!-- WARNING: must follow the server version !!! -->
        <h2.version>1.4.179</h2.version>
        <moo.version>2.0</moo.version>
    </properties>
    <repositories>
        <repository>
            <id>org.jboss.repository.releases</id>
            <name>JBoss Maven Release Repository</name>
            <url>https://repository.jboss.org/nexus/content/repositories/releases</url>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
        <repository>
            <id>garc33-releases</id>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
            <url>https://raw.github.com/garc33/m2p2-repository/mvn-repo/maven/releases/</url>
        </repository>
        <repository>
            <id>garc33-snapshots</id>
            <url>https://raw.github.com/garc33/m2p2-repository/mvn-repo/maven/snapshots/</url>
        </repository>
    </repositories>
    <pluginRepositories>
        <pluginRepository>
            <id>spring-snapshots</id>
            <url>http://repo.spring.io/libs-snapshot</url>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </pluginRepository>
    </pluginRepositories>
    <dependencies>
